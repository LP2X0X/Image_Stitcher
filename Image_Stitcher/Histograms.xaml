<Window x:Class="Image_Stitcher.Histograms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Stitcher"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Closing="Histogram_Closing"
        Title="Grayscale Histogram" Height="768" Width="1366" MinWidth="1366" MinHeight="768" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" Icon="icon.ico">

    <Grid Background="#FFCCCCCC">
        <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="None" Zoom="Xy" Pan="Xy">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Grayscale Values" Labels="{Binding Labels}" Foreground="BlueViolet" FontSize="13" MinValue="{Binding min_hist}" MaxValue="{Binding max_hist}" ></lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Pixel Count" LabelFormatter="{Binding Formatter}" Foreground="BlueViolet" FontSize="13"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

    </Grid>

</Window>
