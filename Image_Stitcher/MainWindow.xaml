<Window x:Name="Window" x:Class="Image_Stitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Stitcher"
        mc:Ignorable="d"
        Title="Image Stitcher" Height="768" Width="1366" MinWidth="1366" MinHeight="768" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen" >
    <Window.Style>
        <Style/>
    </Window.Style>

    <Grid x:Name="main_grid" Background="#FFA5A5A5" Margin="0,0,0,0">
        <Button x:Name="btn_load" Content="Load" HorizontalAlignment="Left" Margin="290,76,0,0" VerticalAlignment="Top" Height="44" Width="43" Click="btn_load_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="txt_path" HorizontalAlignment="Left" Margin="53,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Height="44"/>
        <Label Content="Path" HorizontalAlignment="Left" Margin="8,17,0,0" VerticalAlignment="Top" FontFamily="Input" Width="39" FontWeight= "Bold"/>
        <TextBox x:Name="txt_info" HorizontalAlignment="Left" Margin="53,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Height="44"/>
        <Label Content="Info" HorizontalAlignment="Left" Margin="8,76,0,0" VerticalAlignment="Top" FontFamily= "Input" FontWeight= "Bold"/>
        <ListView x:Name="list_image" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="53,135,0,33" Width="280" SelectionChanged="list_image_SelectionChanged" Height="584">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header = "ID" Width = "30" DisplayMemberBinding="{Binding ID}"/>


                    <GridViewColumn Header = "Images" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=Path}" Width="180" Height="180" ></Image>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="btn_open1" Content="Open" HorizontalAlignment="Left" Margin="290,17,0,0" VerticalAlignment="Top" Width="43" Click="btn_open_Click" Height="44">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="70" Margin="431,135,0,0" Stroke="Black" VerticalAlignment="Top" Width="909"/>
        <Label Content="Output Filename" HorizontalAlignment="Left" Margin="450,150,0,0" VerticalAlignment="Top" FontFamily="Input" FontWeight="Bold" FontSize="13
               "/>
        <Button x:Name="btn_execute" Content="Execute" HorizontalAlignment="Left" Margin="1225,153,0,0" VerticalAlignment="Top" Height="36" Width="104"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="366,17,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.24,0.383" FontFamily="Input" FontWeight="Bold" Width="60" FontSize="13"/>

        <TextBox x:Name="Status_Box" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="431,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="909" Height="103"/>


    </Grid>
</Window>
